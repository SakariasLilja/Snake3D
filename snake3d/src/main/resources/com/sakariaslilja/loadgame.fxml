<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="background" prefHeight="-Infinity" prefWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sakariaslilja.controllers.LoadGameController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <children>
            <Label id="title" maxHeight="-Infinity" maxWidth="-Infinity" text="Load game" />
        </children>
        <padding>
            <Insets left="10.0" />
        </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <ListView fx:id="gamesList" prefHeight="-Infinity" prefWidth="-Infinity" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Button onAction="#gotoMainPage" text="Back" BorderPane.alignment="TOP_LEFT" />
   </bottom>
</BorderPane>
