<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="com.sakariaslilja.controllers.MainPageController" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Snake 3D"/>
        <VBox alignment="CENTER">
            <Button fx:id="newgame" text="New Game" onAction="#gotoNewGame"/>
            <Button text="Load Game"/>
            <Button text="Scores"/>
            <Button text="Quit"/>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" right="10.0" left="10.0" top="10.0"/>
    </padding>
</VBox>